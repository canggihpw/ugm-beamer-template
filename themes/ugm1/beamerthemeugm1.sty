% This section applies to the presentation mode only
\mode<presentation>

% Use the inner theme defined within the ugmone theme
\usecolortheme{\@templatename}
\usefonttheme{\@templatename}
\useoutertheme{\@templatename}
\useinnertheme{\@templatename}


% Adjust margins for text content within slides
\setbeamersize{text margin left=1cm,text margin right=1cm}


%======================================
%% Page Themes
%======================================
\newcommand{\quoteslide}[1]{
\usebackgroundtemplate{\backgroundquote}
\begin{frame}
        \begin{tikzpicture}[remember picture, overlay]
            \draw (current page.south west) +(4.5, 8) node[anchor=north west] {\usebeamerfont{quote final}\usebeamercolor[fg]{quote final}
            \begin{minipage}[c]{6.5cm}
            \centering #1
            \end{minipage}
            };
        \end{tikzpicture}
    \end{frame}
}


%======================================
%% Custom Frames for Special Case
%======================================
% Only used as verbatim latex code
\newenvironment{slide}
{
    \usebackgroundtemplate{\backgroundcontent}
    \begin{frame}[fragile,environment=slide]
}
{\end{frame}}


% This section applies to all modes (presentation, handout, etc.)
\mode<all>