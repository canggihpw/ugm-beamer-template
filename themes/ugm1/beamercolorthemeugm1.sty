%%%%%%%%%%%%%%%%%%
% Define colors
%%%%%%%%%%%%%%%%%%
\definecolor{ugmyellow}{HTML}{f6d648}
\definecolor{ugmblue}{HTML}{194168}
\definecolor{ugmbackgroundblue}{HTML}{00416B}

%%%%%%%%%%%%%%%%%%
% Title Page
%%%%%%%%%%%%%%%%%%
\setbeamercolor{title}{fg=ugmyellow}
\setbeamercolor{subtitle}{fg=white}
% Custom element for background
\setbeamercolor{title page ugmurl}{fg=white}
\setbeamercolor{title page ugmtagline}{fg=white}

%%%%%%%%%%%%%%%%%%
% Section Page
%%%%%%%%%%%%%%%%%%
\setbeamercolor{section title}{fg=ugmblue}% the name
% Custom element for background
\setbeamercolor{section page ugmurl}{fg=ugmblue}
\setbeamercolor{section page ugmtagline}{fg=ugmblue}
% Custom element for background
\setbeamercolor{section page ugmurl}{fg=ugmblue}
\setbeamercolor{section page ugmtagline}{fg=ugmblue}

%%%%%%%%%%%%%%%%%%
% Content Page
%%%%%%%%%%%%%%%%%%
\setbeamercolor{frametitle}{fg=ugmblue}
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{enumerate item}{fg=black}
% Custom element for background
\setbeamercolor{content page ugmurl}{fg=ugmblue}
\setbeamercolor{content page ugmtagline}{fg=ugmblue}

%%%%%%%%%%%%%%%%%%
% Quote Page (Custom page)
%%%%%%%%%%%%%%%%%%
\setbeamercolor{quote final}{fg=white}
\setbeamercolor{quote page ugmurl}{fg=white}
\setbeamercolor{quote page ugmtagline}{fg=white}